[module/lang]
type = custom/script
label-font = 6
exec = sb-layout
label = "%output%"
format-underline = #f10
click-left =
click-right =
scroll-up =
scroll-down =
label-padding= 1
label-margin-right= 0
label-background = #000
label-foreground= #0ff
interval = 0.2
#}}}----------------------------------LANG
#{{{----------------------------------BSPWM
[module/bspwm]
type = internal/bspwm
enable-click = true
format = <label-state>
index-sort = true
wrapping-scroll = false

label-active = %name%
label-active-foreground = #ffffff
label-active-background = #559
label-active-overline = #fba922

label-occupied = %name%
label-occupied-underline = #ff8

label-urgent = %name%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #9b0a20

label-empty = %name%
label-empty-foreground = #fff

label-active-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

format-underline =
format-background =
format-padding =
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

;; Separator in between workspaces
;label-separator = ï…‚
;label-separator-foreground = #5a635a

#}}}----------------------------------BSPWM
#{{{----------------------------------TITLE
[module/title]
type = internal/xwindow
label = %title:0:30:...%
label-padding-left = 4
#}}}----------------------------------TITLE
#{{{----------------------------------PACKAGES
[module/packages]
type = custom/script
exec = sb-pacpackages
label = "%output%"
click-left = $TERMINAL -e yay -Syu
label-padding = 1
interval = 10

#--[module/packages]
#--type = custom/ipc
#--hook-0 = pacman -Qu | wc -l
#--format-prefix = "ğŸ“¦ "
#--click-left = $TERMINAL -e yay -Syu
#--label-padding = 1
#--initial = 1
#}}}----------------------------------PACKAGES
#{{{----------------------------------TIME
[module/time]
type = custom/script
exec = echo "ğŸ“… $(date '+%Y.%m.%d  âŒš%H:%M')"
click-left = $TERMINAL -e calcurse
label = "%output%"
label-background = #02008a
label-padding = 3
interval = 60
#}}}----------------------------------TIME
#{{{----------------------------------MAILBOX
[module/mailbox]
type = custom/script
exec = sb-mailbox 2>/dev/null
label = "%output%"
format-underline = #4a9eff
click-left = $TERMINAL -e neomutt
click-right =  $TERMINAL -e neomut
label-padding = 1

#}}}----------------------------------MAILBOX
#{{{----------------------------------TORRENTS
[module/torrents]
type = custom/script
exec = sb-torrent 2>/dev/null
label = "%output%"
format-underline = #4a9eff
click-left = $TERMINAL -e tremc
click-right = notifytorrents
label-padding = 1

#}}}----------------------------------TORRENTS
#{{{----------------------------------TEMP
[module/temp]
