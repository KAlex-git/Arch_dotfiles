#{{{----------------------------------VOLUME
[module/volume]
type = custom/script
exec = sb-volume
label = "%output%"
format-underline = #4a9eff
click-left = pamixer -t
click-right = $TERMINAL -e pulsemixer
scroll-up = pamixer --allow-boost -i 1
scroll-down = pamixer --allow-boost -d 1
label-padding = 1
interval = 0.2
#}}}----------------------------------VOLUME
#{{{----------------------------------MEMORY
[module/memory]
type = custom/script
exec = free --mebi | sed -n '2{p;q}' | awk '{printf ("ğŸ§  %2.2fGiB/%2.2fGiB\n", ( $3 / 1024), ($2 / 1024))}'
click-left = $TERMINAL -e htop
label = "%output%"
label-underline = #ffa1f5
label-padding = 1
interval = 3
#}}}----------------------------------MEMORY
#{{{----------------------------------CPU
[module/cpu]
type = internal/cpu
format =%{A1:$TERMINAL -e htop:}<label>%{A}
label = ï‹› %percentage%%
label-underline = #fff
label-padding = 1
interval = 0.5
#}}}----------------------------------CPU
#{{{----------------------------------INET
[module/inet]
type = custom/script
exec = sb-internet
label = "%output%"
click-left = $TERMINAL -e nmtui
label-underline = #f50
label-padding = 1
interval = 10
#}}}----------------------------------INET





