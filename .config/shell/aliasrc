## buku - bookmarks
buadd() {
	echo " add bookmarks '$1' and title '$2' "
	case "$1" in
		*[!https]*|"") buku --add "$1" --title "$2" ;;
	esac
}
# buku delete bookmarks
budel() {
	buku -d "$1"
	echo " bookmarks '$1' deleted "
}
