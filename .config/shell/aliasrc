## copy path folder
   yp()
   {
		fullpath=`perl -e 'use Cwd "abs_path";print abs_path(shift)' "$1"`
		 echo $fullpath  | xclip -selection c
		 echo
		 echo -e "path was copied ...FULL  \n $(xclip -selection c -o) "
		 echo
   }


## copy name folder \ files
   yn()
   {
	fname=`basename ${1:-.}`
	echo $fname | xclip -selection clipboard
   }

