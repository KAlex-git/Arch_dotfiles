}

## translate-shell
	tlr(){
		ii=$(trans -b :ru "$*")
		echo -e "\x22 ${ii} \x22"
	}
	tle(){
		ii=$(trans -b :en "$*")
		echo -e "\x22 ${ii} \x22"
	}
