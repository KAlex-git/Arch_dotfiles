## mime
#mime() { mimeo -m "$1" ;}
mime() { file --mime-type "$1" ;}
ask()
{
    echo -n "$@" '[y/n] ' ; read -r ans
    case "$ans" in
        y*|Y*) return 0 ;;
        *) return 1 ;;
    esac
}

