#!/bin/bash
set -o errexit

HISTORY="$HOME/.config/.drun_history"
test -f "$HISTORY" || touch "$HISTORY"
INPUT=$(dmenu $@ < "$HISTORY")
test -n "$INPUT"

# aliases
case "$INPUT" in
    google)
        CMD="xdg-open http://google.com" ;;
    vinote)
        CMD="st -e vinote" ;;
    lf)
        CMD="st -e lf" ;;
    lfrun)
        CMD="st -e lfrun" ;;
    *)
        CMD="$INPUT" ;;
esac

# test if CMD exist in $PATH
hash $(echo "$CMD" | cut -f1 -d ' ')

# write input to history
if ! grep -q "$INPUT" "$HISTORY"; then
    echo "$INPUT" >> "$HISTORY"
    sort "$HISTORY" -o "$HISTORY" &
fi

exec $CMD
