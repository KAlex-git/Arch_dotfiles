#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
esac


declare -a options=("ğŸ”’ lock"
"ğŸšª leave"
"â™»  renew"
"ğŸ» hibernate"
"ğŸ”ƒ reboot"
"ğŸ–¥shutdown"
)

# The combination of echo and printf is done to add line breaks to the end of each
# item in the array before it is piped into dmenu.  Otherwise, all the items are listed
# as one long line (one item).

reDWM(){
	if [[ "$(pgrep -u $USER "\bdwm$")" > 0 ]];then
		kill -HUP $(pgrep -u $USER "\bdwm$|xmonad-x86_64-l|bspwm")
	elif [[ "$(pgrep -u $USER "xmonad-x86_64-l")" > 0 ]];then
		xmonad --recompile
		xmonad --restart
	else
		kill -HUP $(pgrep -u $USER "bspwm")
	fi

}
choice=$(echo "$(printf '%s\n' "${options[@]}")" | dmenu -b -p 'ğŸ’£: ')
case "$choice" in
	"ğŸ”’ lock") slock ;;
		"ğŸšª leave")				kill -TERM kill -TERM $(pgrep -u $USER "\bdwm$|xmonad|bspwm") ;;
		"â™»  renew")				reDWM ;;
		"ğŸ» hibernate")		slock ${hib:-systemctl suspend-then-hibernate -i} ;;
		"ğŸ”ƒ reboot")			${reb:-sudo -A reboot} ;;
		"ğŸ–¥shutdown")			${shut:-sudo -A shutdown -h now} ;;
esac
