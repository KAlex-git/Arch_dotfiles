#!/bin/sh
##
##

#kb="$(xkb-switch)"
#echo " $kb "

set -euo pipefail
IFS=$'\n\t'

declare -r layout_mask=$(xset -q | grep LED | awk '{ print $10 }')

case $layout_mask in
  "00000002")
      echo -n " US "
      ;;

  "00001002")
       echo -n " RU "
       ;;

  *)
      echo -n "??"
      ;;
esac
