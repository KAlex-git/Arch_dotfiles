#!/usr/bin/env sh
# Meaningful aliases for arguments:
path="$1"            # Full path of the selected file

# Find out something about the file:
mimetype=$(file --mime-type -Lb "$path")

	case "$mimetype" in
			text/troff) man ./ $1;;
			image/x-xcf|image/svg+xml) setsid gimp $1 >/dev/null 2>&1 & ;;
			image/svg+xml) display -- $1 ;;
			image/*) sxiv "$1" 2>/dev/null ;;
			audio/*) mpv --input-ipc-server=/tmp/mpvsoc$(date +%%s) "$1" ;;
			video/*) mpv --really-quiet "$@" >/dev/null 2>&1 & disown; exit 1;;
			application/pdf) setsid zathura "$1" >/dev/null 2>&1 & ;;
			application/csv) $TERMINAL -e sc-im "$1" ;;
			application/octet-stream) wine start /ProgIDOpen Wtlib.Favorite "$1" ;;

			application/vnd.openxmlformats-officedocument.wordprocessingml.document) wps "$1";;
			application/vnd.openxmlformats-officedocument.spreadsheetml.sheet|application/vnd.ms-excel|application/vnd.openxmlformatsofficedocument.spreadsheetml.sheet) libreoffice "$1" ;;
			*) xdg-open "$1" >/dev/null 2>&1 ;;
	esac

####################################################
