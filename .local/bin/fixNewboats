#!/bin/sh
# –ü—Ä–æ–≥—Ä–∞–º–º–∞ 'qndl' c–æ–∑–¥–∞–Ω–Ω–∞—è Luke Smith –∞–Ω–∞–ª–æ–≥–∏—á–Ω–∞

# $1 is a url; $2 is a command
[ -z "$1" ] && exit
#base="$(basename "$1")"
base="$(basename "$1")"
notify-send "‚è≥ Queuing $base..."
wget -c $1 -P ~/Downloads/
open ~/Downloads/$base
notify-send "üëç $base done."

## enable dmenu
choice="delete\nNo"

chosen=$(echo -e "$choice" | dmenu -i -p "'$base'?")
case "$chosen" in
    No) echo " I have "$base"" ;;
    delete) rm ~/Downloads/$base ;;
esac
